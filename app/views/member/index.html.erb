<h1>Listing Member</h1>
<h3>
  Event ID: <%= @event.id %><br>
  Event Name: <%= @event.name %>
</h3>
<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>Create Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.name %></td>
        <td><%= member.created_at %></td>
        <td><%= link_to 'Show', event_member_path(member.event, member) %></td>
        <td><%= link_to 'Destroy', event_member_path(member.event, member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

